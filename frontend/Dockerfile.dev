# Development Dockerfile for Next.js
FROM node:20-alpine

WORKDIR /app


# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm install

# Copy all files
COPY . .

# Expose port
EXPOSE 3000

ENV NODE_ENV=development
ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

# Default command (can be overridden in docker-compose)
CMD ["npm", "run", "dev"]
